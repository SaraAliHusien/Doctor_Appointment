					<a asp-action="Create" asp-controller="DailyAvailbilities" asp-route-docId="@Model.DoctorID" class="btn  btn-round-full mt-3 bg-gray btn-gray" style="color:#223a66"> Add New Day<i class="icofont-ui-add"></i></a>

