@section Scripts{

	<script>

		
		$(document).ready(function () {
			//delate day
			$('.js-delete').on('click', function () {
				var btn = $(this);
				Swal.fire({

					title: "Are you sure you want to delete this Day?",
					icon: "warning",
					showCancelButton: true,
					confirmButtonColor: "#e12454",
					cancelButtonColor: "#b5a8ab",
					confirmButtonText: " Delete",
					color: "#223a66",
					background: "#eff0f3 ",


				}).then((result) => {
					if (result.isConfirmed) {
						$.ajax({
							url: '/DailyAvailbilities/Delete',
							data: { "DocId": @Model.DoctorID, "DayId": btn.data('id') },
							success: function () {
								Swal.fire({

									title: "Deleted!",
									text: "The Day deleted succesfully.",
									icon: "success",
									confirmButtonColor: "#b5a8ab",
									color: "#223a66",
									background: "#eff0f3 "
								});
								btn.parents('tr').animate({ 'line-height': 0 }, 1000).hide(500);

							},
							error: function () {
								Swal.fire({

									title: "Ooooops!",
									text: "Something went wrong!",
									icon: "error",
									confirmButtonColor: "#b5a8ab",
									color: "#223a66",
									background: "#eff0f3 "
								});


							}
						});

					}
				});

			});
			//delete doctor
			$('.doctor-delete').on('click', function () {
				var btn = $(this);
				Swal.fire({

					title: "Are you sure you want to delete this Doctor? all his appointment will be deleted..!",
					icon: "warning",
					showCancelButton: true,
					confirmButtonColor: "#e12454",
					cancelButtonColor: "#b5a8ab",
					confirmButtonText: " Delete",
					color: "#223a66",
					background: "#eff0f3 ",

				}).then((result) => {
					if (result.isConfirmed) {
						$.ajax({
							url: '/Doctors/Delete/'+btn.data('id'),
							
							success: function () {
								
								// Swal.fire({
								// 	position: "top-end",
								// 	icon: "success",
								// 	title: "Your work has been saved",
								// 	showConfirmButton: false,
								// 	timer: 1500
								// });
								window.location.replace("/Doctors/Index");
								

							},
							error: function () {
								Swal.fire({

									title: "Ooooops!",
									text: "Something went wrong!",
									icon: "error",
									confirmButtonColor: "#b5a8ab",
									color: "#223a66",
									background: "#eff0f3 "
								});


							}
						});

					}
				});

			});
		});
	</script>
}

































