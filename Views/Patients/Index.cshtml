@model IEnumerable<Doctor_Appointment.Models.Patient>

@{
    ViewData["Title"] = "Index";
}
<div class="px-5">

<h2>All Patients </h2>
    <div class="divider mb-3"></div>
<table class="table">
    <thead>
        <tr>
            <th>
                Patient Name
            </th>
            <th>
                Gender
            </th>
            <th>
              Age
            </th>
            <th>
                Phone Number
            </th>
       
            <th>
               Address
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var patient in Model) {
        <tr>
            <td>
                        @patient.FullName
            </td>
            <td>
                        @patient.Gender
            </td>
            <td>
                        @patient.Age
            </td>
            <td>
                @patient.PhonNum
            </td>
           
            <td>
               @patient.Address
            </td>
            <td>
                        <a href="javaScript:;" class="js-delete" data-id="@patient.PatientID">Delete</a>

            </td>
        </tr>
}
    </tbody>
</table>
</div>
@section Scripts{

<script>

    $(document).ready(function () {

        $('.js-delete').on('click', function () {
            var btn = $(this);
            Swal.fire({

                title: "Are you sure you want to delete this Patient?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#e12454",
                cancelButtonColor: "#b5a8ab",
                confirmButtonText: " Delete",
                color: "#223a66",
                background: "#eff0f3 ",

            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/Patients/Delete/' + btn.data('id'),

                        success: function () {
                            Swal.fire({

                                title: "Deleted!",
                                text: "The Patient deleted Sucessfully.",
                                icon: "success",
                                confirmButtonColor: "#b5a8ab",
                                color: "#223a66",
                                background: "#eff0f3 "
                            });
                            btn.parents('tr').animate({ 'line-height': 0 }, 1000).hide(500);

                        },
                        error: function () {
                            Swal.fire({

                                title: "Ooooops!",
                                text: "Something went wrong!",
                                icon: "error",
                                confirmButtonColor: "#b5a8ab",
                                color: "#223a66",
                                background: "#eff0f3 "
                            });


                        }
                    });

                }
            });

        });
    });
</script>
}